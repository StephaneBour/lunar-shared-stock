{
    "name": "stephanebour/lunar-shared-stock",
    "description": "Lunar plugin to manage shared stock between product options",
    "type": "library",
    "keywords": ["laravel", "lunar", "ecommerce", "stock", "inventory"],
    "license": "MIT",
    "authors": [
        {
            "name": "St√©phane Bour",
            "email": "github@stephp.fr"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/support": "^10.0|^11.0|^12.0",
        "lunarphp/lunar": "^1.0",
        "filament/filament": "^3.0|^4.0"
    },
    "autoload": {
        "psr-4": {
            "StephaneBour\\LunarSharedStock\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "StephaneBour\\LunarSharedStock\\SharedStockServiceProvider"
            ]
        },
        "lunar": {
            "addon": {
                "name": "Lunar Shared Stock",
                "description": "Shared inventory management for product options"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
} 